.input-frame {
  position: relative;
  display: flex;
  justify-content: center;
}

.input-frame .input-item {
  width: 50px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #ccc;
}

.input-frame__input {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  left: -5000px;
}

.input-frame .input-item:not(:nth-last-child(1)) {
  border-right-color: transparent;
}

/* divider style */
.input-frame.divider .input-item {
  border-top-color: transparent;
  border-right-color: transparent;
  border-left-color: transparent;
  margin: 0 7px;
  width: 40px;
  height: 40px;
}
